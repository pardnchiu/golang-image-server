{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@src": [
                "src/index"
            ],
            "@src/*": [
                "src/*"
            ],
            "@middlewares": [
                "src/middlewares/index"
            ],
            "@middlewares/*": [
                "src/middlewares/*"
            ],
            "@router": [
                "src/router/index"
            ],
        }
    }
}